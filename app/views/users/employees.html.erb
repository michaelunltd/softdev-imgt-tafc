<h1>Employees#index</h1>
<p>Find me in app/views/users/employees.html.erb</p>

<table class="table-hover table-striped" id="datatable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |user| %>
    <tr>
      <td>
        <h4 class="text-capitalize"><%= "#{user.last_name}, #{user.first_name}" %></h4>
      </td>
      <td><%= user.email %></td>
      <td>
        <div class="dropdown text-center">
          <button aria-expanded="false" aria-haspopup="true" class="btn btn-default dropdown-toggle btn-center" data-toggle="dropdown" type="button">
            Options
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li class="text-info">
              <% if can? :show_employee, user %>
              <%= link_to show_employee_path(user) do %>
              <i class='glyphicon glyphicon-briefcase text-info'></i>
              Details
              <% end %>
              <% end %>
            </li>
            <li class="text-info">
              <% if can? :edit, user %>
              <%= link_to edit_user_path(user) do %>
              <i class='glyphicon glyphicon-edit text-info'></i>
              Edit Profile
              <% end %>
              <% end %>
            </li>
            <li class="text-warning">
              <% if can? :change_password, user %>
              <%= link_to change_password_path(user) do %>
              <i class='glyphicon glyphicon-remove text-warning'></i>
              Change Password
              <% end %>
              <% end %>
            </li>
            <li class="text-danger">
              <% if can? :destroy, user %>
              <%= link_to user, method: :delete, data: {confirm: 'Are you sure?'} do %>
              <i class='glyphicon glyphicon-trash text-danger'></i>
              Delete
              <% end %>
              <% end %>
            </li>
          </ul>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
