<h1 class="text-capitalize"> Change Password </h1>
<hr>

<%= form_for @user, url: {action: 'update_password'} do |f| %>
  <% if @user.errors.any? %>
    <%= render "shared/error_messages", locals: {form_model: @user} %>
  <% end %>

    <div class="col-sm-5 col-md-8" id="panel">
  <div class="form-group">
    <% unless can? :manage, User %>
      <%= f.label :old_password , class:"control-label", for:"inputOld" %>
      <%= f.password_field :old_password, class: "form-control", id:"inputOld" %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password, 'New Password', class:"control-label", for:"inputNew" %>
    <%= f.password_field :password, class: "form-control", id: "inputNew" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'New Password Confirm' , class:"control-label", for:"inputConfirm" %>
    <%= f.password_field :password_confirmation, class: "form-control", id:"inputConfirm" %>
  </div>

  <div class="actions col-md-6 pull-right">
    <%= f.submit "Update User", class: "btn btn-primary btn-md btn-block" %>
  </div>
</div>
<% end %>
