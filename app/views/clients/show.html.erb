<h5>You are currently viewing the profile of <%= @client.company_name %></h5>

<strong><h3 class="text-capitalize"><%= "#{@client.company_name}" %></h3></strong>
<hr>

<div class="pull-right">
  <%= link_to logout_path do %>
    <button class='btn btn-info btn-sm' role='button'>
      <i class='glyphicon glyphicon-list-alt'></i> Show Report
    </button>
  <% end %>
  <%= link_to new_transaction_path(@client.id) do %>
   <button class='btn btn-info btn-sm' role='button'>
     <i class='glyphicon glyphicon-briefcase'></i> Add Transaction
   </button>
  <% end %>
</div>


<ol>
  <% @transactions.each do |transaction| %>
      <li>
        <h3 class="text-capitalize">Transaction Invoice: <%= "#{transaction.billing_num}" %></h3>
        <%= link_to transaction_path(transaction) do %>
          <button class='btn btn-info btn-sm' role='button'>
            <i class='glyphicon glyphicon-briefcase'></i> Transaction Details
          </button>
        <% end %>
      </li>
  <% end %>
</ol>
