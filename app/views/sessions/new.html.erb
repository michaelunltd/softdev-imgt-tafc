<%= form_tag check_login_path do %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Please Sign In</h3>
      </div>
      <div class="panel-body">
              <div class="form-group">
          <%= label_tag :email, class:"control-label", for:"inputEmail" %>
          <%= text_field_tag :email, @email, class: "form-control", type: "email", required: "required", id:"inputEmail", placeholder: "sample@gmail.com, example@yahoo.com" %>
        </div>
        <div class="form-group">
          <%= label_tag :password, class:"control-label", for:"inputPassword" %>
          <%= password_field_tag :password, nil, class: "form-control", required: "required", id:"inputPassword" %>
        </div>
        <div>
          <%= submit_tag "Log in", class: "btn btn-primary btn-lg pull-right btn-block" %>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %>
